# Configuration pour l'application Road Reporter - Environnement Docker

# Serveur de tuiles offline
REACT_APP_TILE_SERVER_URL=http://localhost/tiles/{z}/{x}/{y}.png

# API Backend (optionnel)
REACT_APP_API_URL=http://localhost:3001

# Mode offline
REACT_APP_OFFLINE_MODE=true

# Firebase (optionnel pour firestore local)
REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
REACT_APP_FIREBASE_STORAGE_BUCKET=

# Coordonnées par défaut (Antananarivo)
REACT_APP_DEFAULT_LAT=-18.8792
REACT_APP_DEFAULT_LNG=47.5079
REACT_APP_DEFAULT_ZOOM=13
